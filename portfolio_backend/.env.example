# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database Configuration (PostgreSQL for Production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=portfolio_db
# DB_USER=portfolio_user
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# Cache Configuration (Redis)
# REDIS_URL=redis://127.0.0.1:6379/1

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com
# CONTACT_EMAIL=contact@yourdomain.com

# SendGrid (Alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key

# API Rate Limiting
THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# Timezone
TIME_ZONE=UTC

# AWS S3 Configuration (Optional - for media files)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Celery Configuration (Optional - for background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Sentry Configuration (Optional - for error tracking)
# SENTRY_DSN=your-sentry-dsn

# Django Logging Level
DJANGO_LOG_LEVEL=INFO
